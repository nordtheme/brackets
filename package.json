{
  "name": "nord-brackets",
  "description": "An arctic, north-bluish clean and elegant Brackets theme",
  "version": "0.1.0",
  "homepage": "https://www.nordtheme.com/ports/brackets",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nordtheme/brackets.git"
  },
  "bugs": {
    "url": "https://github.com/nordtheme/brackets/issues"
  },
  "license": "MIT",
  "engines": {
    "brackets": ">=0.24.0"
  },
  "keywords": [
    "arctic",
    "north",
    "bluish",
    "clean",
    "elegant"
  ],
  "theme": {
    "file": "nord.less",
    "dark": true,
    "addModeClass": true
  },
  "scripts": {
    "format": "run-s format:pretty",
    "format:pretty": "prettier --ignore-unknown --no-editorconfig --write . .husky/*",
    "lint": "run-s lint:css lint:md lint:pretty",
    "lint:ci": "run-s lint:css lint:md lint:ci:*",
    "lint:ci:pretty": "prettier --check --ignore-unknown --loglevel silent --no-editorconfig --no-error-on-unmatched-pattern . .husky/*",
    "lint:css": "stylelint --formatter verbose *.less styles/",
    "lint:md": "remark --no-stdout . \".github/**/*.md\"",
    "lint:pretty": "prettier --check --ignore-unknown --no-editorconfig . .husky/*",
    "prepare:husky": "husky install",
    "prepare": "run-s prepare:*"
  },
  "dependencies": {
    "nord": "0.2.1"
  },
  "devDependencies": {
    "@arcticicestudio/remark-preset-lint": ">=0.4.0 <1.0.0",
    "@prettier/plugin-xml": "2.2.0",
    "husky": "8.0.3",
    "lint-staged": "13.2.1",
    "npm-run-all": "4.1.5",
    "postcss-less": "6.0.0",
    "prettier": "2.8.7",
    "prettier-plugin-sh": "0.12.8",
    "remark-cli": "11.0.0",
    "stylelint-config-standard": "32.0.0",
    "stylelint-less": "1.0.6",
    "stylelint-prettier": "3.0.0"
  }
}
